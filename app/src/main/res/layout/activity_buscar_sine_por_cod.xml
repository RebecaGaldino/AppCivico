<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtCodSine"
        android:hint="Código do Sine"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/btnBuscar"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cód. "
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvCod"
                android:layout_alignBottom="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:maxLines="3"
                android:padding="8dp"
                android:textSize="28dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:id="@+id/textView3"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvNome"
                android:layout_below="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:maxLines="3"
                android:padding="8dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ent. Conveniada: "
                android:id="@+id/textView5"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvEC"
                android:layout_alignTop="@+id/textView5"
                android:layout_toEndOf="@+id/textView5"
                android:maxLines="3"
                android:padding="8dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço: "
                android:id="@+id/textView7"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvEndereco"
                android:layout_below="@+id/textView7"
                android:layout_alignEnd="@+id/tvEC"
                android:maxLines="3"
                android:padding="8dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bairro: "
                android:id="@+id/textView9"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvBairro"
                android:layout_below="@+id/textView7"
                android:layout_alignEnd="@+id/tvEndereco"
                android:maxLines="3"
                android:padding="8dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEP: "
                android:id="@+id/textView11"
                android:layout_below="@+id/textView9"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvCep"
                android:layout_below="@+id/textView9"
                android:layout_toEndOf="@+id/textView9"
                android:maxLines="3"
                android:padding="8dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone: "
                android:id="@+id/textView13"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvTel"
                android:layout_below="@+id/textView11"
                android:layout_toEndOf="@+id/textView13"
                android:maxLines="3"
                android:padding="8dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Município: "
                android:id="@+id/textView15"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvMunicipio"
                android:layout_below="@+id/tvTel"
                android:layout_toEndOf="@+id/textView15"
                android:maxLines="3"
                android:padding="8dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UF: "
                android:id="@+id/textView17"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvUf"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView15"
                android:maxLines="3"
                android:padding="8dp"
                android:textSize="18dp"/>



        </RelativeLayout>

    </ScrollView>




</LinearLayout>