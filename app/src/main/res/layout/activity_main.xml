<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Button
        android:text="Listar Sines CG (Raio 100km)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnListarSinesCG" />

    <Button
        android:text="Listar todos os Sines(BR)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnListarSinesBR" />

    <Button
        android:text="Buscar Sine por código"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuscarSinePorCod" />

    <Button
        android:text="Ver Sines CG no mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMap" />

    <Button
        android:text="Ver Sines por localização GPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMapGPS" />

</LinearLayout>
